<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<!-- this configuration is used to access free all sites belong according the pattern
	defined in pattern attributes.-->
	<http use-expressions="true" security="none" pattern="/notifications/**"/>

	<http auto-config="true" use-expressions="true" access-denied-page="/accessdenied">
		<intercept-url pattern="favicon.ico" access="permitAll" />
		
		<intercept-url pattern="/home/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/city/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/type/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
 		<intercept-url pattern="/user/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/mail/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/test/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/victim/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/result/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/mailoutcome/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />	
		<intercept-url pattern="/dashboard/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />	
		<intercept-url pattern="/cheat/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/activity/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />
		<intercept-url pattern="/loginactivity/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="http" />				

		<form-login login-page="/accessdenied" default-target-url="/home/default"
			authentication-failure-url="/loginfail?auth=76b1c1aa-8f9e-4e9e-a43e-7228a35e39a3"
			always-use-default-target="false" 
			authentication-success-handler-ref="customAuthenticationSuccessHandler"/>
		<logout logout-success-url="/logoutsuccess?auth=76b1c1aa-8f9e-4e9e-a43e-7228a35e39a3" invalidate-session="true"
			delete-cookies="JSESSIONID"/>
		<session-management>
			<concurrency-control error-if-maximum-exceeded="true"
				max-sessions="3" expired-url="/accessdenied" />
		</session-management>
	</http>
		
	<authentication-manager>
		<authentication-provider user-service-ref="userService">
			<password-encoder ref="passwordEncoder" />
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="passwordEncoder"
		class="com.example.springwebtemplate.util.BCryptPasswordEncoder" />
		
	<beans:bean id="customAuthenticationSuccessHandler"
        class="com.example.springwebtemplate.util.authentication.CustomAuthenticationSuccessHandler" />
</beans:beans>